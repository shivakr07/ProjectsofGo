{
    "$schema": "https://turbo.build/schema.json",
    "ui":"tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$",".env*"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "lint:fix": {
            "dependsOn": ["^lint:fix"]
        },
        "typecheck": {
            "dependsOn": ["^typecheck"]
        },
        "format": {
            "dependsOn": ["^format"]
        },
        "format:fix": {
            "dependsOn": ["^format:fix"]
        },
        "clean": {
            "cache": false,
            "persistent": true
        }
    }
}